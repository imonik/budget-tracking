@using FinanceAndBudgetTracking.Models.DTO
@using FinanceAndBudgetTracking.UI.ViewModels

@model List<UserCategoryDTO>

@{
    ViewData["Title"] = "Categories";
}
<div class="container-fluid">
    <div class="row card">
        <div class="col card-body">
            <form asp-controller="Category" asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="Name">Name:</label>
                    <input type="text" data-val="true"
                    data-val-required="Name field is required."
                    id="CategoryName" name="CategoryName" value=""><br>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn-primary">Create category</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row card">
        <div class="col card-body">
            <h3>Categories</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>
                                <a href="Details/@category.CategoryId">Details</a>
                                @if (@category.UserId != -1) 
                                {
                                    <a href="Category/Delete/@category.CategoryId">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>