@using FinanceAndBudgetTracking.UI.ViewModels
@model LoginRegisterViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Login Panel -->
        <div class="col-md-5">
            <h3>Login</h3>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="LoginRequest.Email" class="form-label"></label>
                    <input asp-for="LoginRequest.Email" class="form-control" />
                    <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LoginRequest.Password" class="form-label"></label>
                    <input asp-for="LoginRequest.Password" class="form-control" type="password" />
                    <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <!-- Register Panel -->
        <div class="col-md-5 offset-md-1">
            <h3>Register</h3>
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="LoginRegisterDTO.Email" class="form-label"></label>
                    <input asp-for="LoginRegisterDTO.Email" class="form-control" />
                    <span asp-validation-for="LoginRegisterDTO.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LoginRegisterDTO.Password" class="form-label"></label>
                    <input asp-for="LoginRegisterDTO.Password" class="form-control" type="password" />
                    <span asp-validation-for="LoginRegisterDTO.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LoginRegisterDTO.ConfirmPassword" class="form-label"></label>
                    <input asp-for="LoginRegisterDTO.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="LoginRegisterDTO.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

